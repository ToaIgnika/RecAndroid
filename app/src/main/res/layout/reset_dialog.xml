<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/resetTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems= "20"
            android:textSize="10pt"
            android:text="Reset Pin"
            android:layout_centerHorizontal="true"

            />

        <EditText
            android:id="@+id/resetPasswordField"
            android:inputType="numberPassword"
            android:layout_below="@+id/resetTitle"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter password"
            android:ems="10"
            android:singleLine="true"
            android:maxLength="4"

            />


        <EditText
            android:id="@+id/confirmPasswordField"
            android:inputType="numberPassword"
            android:layout_below="@+id/resetPasswordField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="confirm password"
            android:maxLength="4"
            android:ems="10"/>

        <Button
            android:id="@+id/resetLoginButton"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/confirmPasswordField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>